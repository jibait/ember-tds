{{page-title "Contacts"}}
<h1>Contacts ({{@model.length}})</h1>
<table class="table">
  <tbody>
  {{#each @model.contacts as |contact|}}
    <tr>
      <td>{{contact.nom}}</td>
      <td>
        <LinkTo class="btn btn-primary btn-sm" @route="contacts.update" @model={{contact}}>
          <i class="bi bi-pencil-fill"></i>
        </LinkTo>
        <button class="btn btn-danger btn-sm" type="button" {{action "delete" contact}}>
          <i class="bi bi-x-lg"></i>
        </button>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>

